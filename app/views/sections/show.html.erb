<!-- Хлебные крошки -->
<nav class="flex mb-6" aria-label="Хлебные крошки">
  <ol class="flex items-center space-x-2 text-sm">
    <li>
      <%= link_to "Главная", root_path, class: "text-blue-600 hover:text-blue-800 transition-colors" %>
    </li>
    <% if @section.parent %>
      <li class="flex items-center">
        <svg class="w-4 h-4 mx-1 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
        <%= link_to @section.parent.title, @section.parent, class: "text-blue-600 hover:text-blue-800 transition-colors" %>
      </li>
    <% end %>
    <li class="flex items-center">
      <svg class="w-4 h-4 mx-1 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
      </svg>
      <span class="text-gray-600 font-medium"><%= @section.title %></span>
    </li>
  </ol>
</nav>

<!-- Заголовок и кнопки -->
<div class="flex flex-col lg:flex-row lg:justify-between lg:items-start gap-6 mb-8">
  <div class="flex-grow">
    <h1 class="text-3xl font-bold text-gray-900 mb-2"><%= @section.title %></h1>
    <% if @section.description.present? %>
      <p class="text-gray-600 text-lg mb-3"><%= @section.description %></p>
    <% end %>
    <p class="text-sm text-gray-500">Полный путь: <%= @section.full_path %></p>
  </div>
  <div class="flex flex-col sm:flex-row lg:flex-col xl:flex-row gap-3 flex-shrink-0">
    <%= link_to "Добавить подраздел", 
                new_section_child_path(@section), 
                class: "px-4 py-2 bg-green-600 hover:bg-green-700 text-white font-medium rounded-lg transition-colors text-center" %>
    
    <%= link_to "Добавить статью", 
                new_section_article_path(@section), 
                class: "px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition-colors text-center" %>
    
    <%= link_to "Редактировать", 
                edit_section_path(@section), 
                class: "px-4 py-2 border border-gray-300 hover:border-gray-400 text-gray-700 hover:text-gray-900 font-medium rounded-lg transition-colors text-center" %>
    
    <%= link_to "Назад", 
                (@section.parent ? section_path(@section.parent) : sections_path), 
                class: "px-4 py-2 border border-blue-300 hover:border-blue-400 text-blue-600 hover:text-blue-800 font-medium rounded-lg transition-colors text-center" %>
  </div>
</div>

<!-- Подразделы -->
<% if @children.any? %>
  <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden mb-6">
    <div class="bg-gray-50 px-6 py-4 border-b border-gray-200">
      <h2 class="text-xl font-semibold text-gray-800">Подразделы</h2>
    </div>
    <div class="divide-y divide-gray-100">
      <% @children.each do |child| %>
        <%= render 'section_item', section: child %>
      <% end %>
    </div>
  </div>
<% end %>

<!-- Статьи -->
<% if @articles.any? %>
  <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
    <div class="bg-gray-50 px-6 py-4 border-b border-gray-200">
      <h2 class="text-xl font-semibold text-gray-800">Статьи в этом разделе</h2>
    </div>
    <div class="divide-y divide-gray-100">
      <% @articles.each do |article| %>
        <div class="p-6 hover:bg-gray-50 transition-colors">
          <div class="flex flex-col sm:flex-row sm:justify-between sm:items-start gap-3 mb-3">
            <h3 class="text-lg font-semibold text-gray-900 hover:text-blue-600 transition-colors">
              <%= link_to article.title, [@section, article] %>
            </h3>
            <span class="text-sm text-gray-500 whitespace-nowrap">
              <%= article.created_at.strftime("%d.%m.%Y") %>
            </span>
          </div>
          
          <% if article.content.to_plain_text.present? %>
            <p class="text-gray-600 mb-4 line-clamp-2">
              <%= truncate(article.content.to_plain_text, length: 150) %>
            </p>
          <% end %>
          
          <div class="flex flex-wrap gap-2">
            <%= link_to "Редактировать", 
                        edit_section_article_path(@section, article), 
                        class: "px-3 py-1 text-sm border border-gray-300 hover:border-gray-400 text-gray-700 hover:text-gray-900 rounded transition-colors" %>
            
            <%= link_to "Удалить", 
                        [@section, article], 
                        method: :delete,
                        data: { confirm: "Удалить статью?" },
                        class: "px-3 py-1 text-sm border border-red-300 hover:border-red-400 text-red-600 hover:text-red-800 rounded transition-colors" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% end %>

<!-- Пустое состояние -->
<% if @articles.empty? && @children.empty? %>
  <div class="text-center py-12 bg-white rounded-xl shadow-sm border border-gray-200">
    <div class="max-w-md mx-auto">
      <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
        <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
        </svg>
      </div>
      <h3 class="text-2xl font-semibold text-gray-900 mb-2">В этом разделе пока нет статей или подразделов</h3>
      <p class="text-gray-600 mb-6">Создайте первую статью или подраздел</p>
      <div class="flex flex-col sm:flex-row gap-3 justify-center">
        <%= link_to "Создать подраздел", 
                    new_section_child_path(@section), 
                    class: "px-6 py-2 bg-green-600 hover:bg-green-700 text-white font-medium rounded-lg transition-colors text-center" %>
        
        <%= link_to "Создать статью", 
                    new_section_article_path(@section), 
                    class: "px-6 py-2 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition-colors text-center" %>
      </div>
    </div>
  </div>
<% end %>