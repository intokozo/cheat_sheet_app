<%= form_with model: section, class: "space-y-6" do |form| %>
  <% if section.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-lg p-4">
      <h4 class="text-red-800 font-medium text-sm mb-2">Обнаружены ошибки:</h4>
      <ul class="text-red-700 text-sm list-disc list-inside space-y-1">
        <% section.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="space-y-2">
    <%= form.label :parent_id, "Родительский раздел", class: "block text-sm font-medium text-gray-700" %>
    <%= form.collection_select :parent_id, 
                              Section.where.not(id: section.id || 0), 
                              :id, :full_path, 
                              { include_blank: "Нет (корневой раздел)" }, 
                              class: "w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors" %>
  </div>

  <div class="space-y-2">
    <%= form.label :title, "Название раздела", class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :title, 
          class: "w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors",
          required: true,
          placeholder: "Введите название раздела" %>
    <p class="text-xs text-gray-500">Обязательное поле</p>
  </div>

  <div class="space-y-2">
    <%= form.label :description, "Описание", class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_area :description, 
          class: "w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors",
          rows: 3,
          placeholder: "Введите описание раздела (необязательно)" %>
  </div>

  <div class="flex flex-col sm:flex-row gap-3 pt-4">
    <%= form.submit "Сохранить", 
          class: "px-6 py-2 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition-colors cursor-pointer" %>
    
    <%= link_to "Отмена", 
          (section.persisted? ? (section.parent ? section_path(section.parent) : sections_path) : sections_path),
          class: "px-6 py-2 border border-gray-300 hover:border-gray-400 text-gray-700 hover:text-gray-900 font-medium rounded-lg transition-colors text-center" %>
  </div>
<% end %>