<!-- Хлебные крошки -->
<nav class="flex mb-6" aria-label="Хлебные крошки">
  <ol class="flex items-center space-x-2 text-sm">
    <li>
      <%= link_to "Главная", root_path, class: "text-blue-600 hover:text-blue-800 transition-colors" %>
    </li>
    <li class="flex items-center">
      <svg class="w-4 h-4 mx-1 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
      </svg>
      <%= link_to @section.title, @section, class: "text-blue-600 hover:text-blue-800 transition-colors" %>
    </li>
    <li class="flex items-center">
      <svg class="w-4 h-4 mx-1 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
      </svg>
      <span class="text-gray-600 font-medium"><%= @article.title %></span>
    </li>
  </ol>
</nav>

<!-- Заголовок и кнопки -->
<div class="flex flex-col lg:flex-row lg:justify-between lg:items-start gap-6 mb-8">
  <h1 class="text-3xl font-bold text-gray-900"><%= @article.title %></h1>
  <div class="flex flex-col sm:flex-row lg:flex-col xl:flex-row gap-3 flex-shrink-0">
    <%= link_to "Редактировать", 
                edit_section_article_path(@section, @article), 
                class: "px-4 py-2 border border-gray-300 hover:border-gray-400 text-gray-700 hover:text-gray-900 font-medium rounded-lg transition-colors text-center" %>
    
    <%= link_to "Удалить", 
                [@section, @article], 
                method: :delete,
                data: { confirm: "Удалить статью?" },
                class: "px-4 py-2 border border-red-300 hover:border-red-400 text-red-600 hover:text-red-800 font-medium rounded-lg transition-colors text-center" %>
    
    <%= link_to "Назад к разделу", 
                @section, 
                class: "px-4 py-2 border border-blue-300 hover:border-blue-400 text-blue-600 hover:text-blue-800 font-medium rounded-lg transition-colors text-center" %>
  </div>
</div>

<!-- Содержимое статьи -->
<div class="bg-white rounded-xl border border-gray-200 p-6 mb-6">
  <div class="prose max-w-none">
    <%= @article.content %>
  </div>
</div>

<!-- Информация о статье -->
<div class="pt-4 mt-4 border-t border-gray-200">
  <div class="text-sm text-gray-500">
    <span>Создано: <%= @article.created_at.strftime("%d.%m.%Y %H:%M") %></span>
    <% if @article.updated_at != @article.created_at %>
      <span class="mx-2">|</span>
      <span>Обновлено: <%= @article.updated_at.strftime("%d.%m.%Y %H:%M") %></span>
    <% end %>
  </div>
</div>