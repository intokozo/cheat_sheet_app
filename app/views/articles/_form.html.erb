<%= form_with model: [section, article] do |form| %>
  <% if article.errors.any? %>
    <div class="alert alert-danger">
      <h4>Обнаружены ошибки:</h4>
      <ul>
        <% article.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :title, "Название статьи", class: "form-label" %>
    <%= form.text_field :title, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :content, "Содержание", class: "form-label" %>
    <%= form.rich_text_area :content %>
  </div>

  <div class="mb-3">
    <%= form.submit "Сохранить", class: "btn btn-primary" %>
    <%= link_to "Отмена", section, class: "btn btn-secondary" %>
  </div>
<% end %>